<%= form_with model:@blog,url:blogs_path, local: true do |form|%>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>

  <div class='field'>
    <%= form.rich_text_area :content %>
  </div>
 
    <%= form.submit %>

<%end%>